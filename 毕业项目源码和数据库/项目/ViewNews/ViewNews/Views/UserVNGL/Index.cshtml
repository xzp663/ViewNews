
@{
    Layout = null;
}
@using ViewNews.Models
@{
    List<NewsUser> user = ViewBag.user;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>用户列表</title>
    <style>
        .news {
            margin-top: 1em;
            margin-left: 2em;
            width: 95%;
        }

        .juli {
            margin: 1em;
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <div>
        <div class="news">
            <h2>用户列表</h2>
            <div class="juli">
                <table class="table table-hover">
                    <tr>
                        <th>用户账号</th>
                        <th>用户密码</th>
                        <th>用户昵称</th>
                        <th>用户头像</th>
                        <th>用户性别</th>
                        <th>用户个性签名</th>
                        <th>操作</th>
                    </tr>
                    @foreach (var item in user)
                    {
                <tr class="info">
                    <td>@item.NewsUserAccount</td>
                    <td>@item.NewsUserPwd</td>
                    <td>@item.NewsUserName</td>
                    <td>
                        @if (@item.NewsUserImage == null)
                        {
                        <img src="~/Content/imageKeHu/User/通用.png" width="50"/>
                        }
                        else { 
                    <img src="~/Content/imageKeHu/User/@item.NewsUserImage"  width="50"/>
                        }
                    </td>
                    <td>@item.NewsUserSex</td>
                    <td>@item.NewsUserMotto</td>
                    <td>
                        <a href="/UserVNGL/UserXiangxi/?UserID=@item.NewsUserID" class="btn btn-primary">查看</a>
                    </td>
                </tr>
                    }
                    
                </table>
            </div>
        </div>
    </div>
</body>
</html>
