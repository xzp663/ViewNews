
@{
    Layout = null;
}
@using ViewNews.Models
@{
    News newss = ViewBag.news;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>新闻详情</title>
    @Styles.Render("~/Content/css")
    <style type="text/css">
        .fanhui, .bianji {
            margin: 1em;
        }

        h1, #contentText {
            color: black;
        }

        .news_quan {
            width: 900px;
            border: 1px solid darkgray;
            margin: 0 auto;
        }

        .news_zhong {
            color: darkgray;
            margin-top: 1em;
        }

        .new_time {
            float: left;
        }

        .new_ziti {
            margin-left: 100px;
            float: left;
        }

        .new_yuan {
            margin-left: 100px;
            float: left;
        }

        .dibu {
            text-align: right;
            margin-right: 1em;
        }
    </style>
    <script type=text/javascript>
    function $(xixi) {
            return document.getElementById(xixi);
        }
        //转换字号
        function doZoom(size) {
            if (size == 12) {
                $("contentText").style.fontSize = size + "px";
                $("fs12").style.display = "";
                $("fs14").style.display = "none";
                $("fs16").style.display = "none";
            }
            if (size == 18) {
                $("contentText").style.fontSize = size + "px";
                $("fs12").style.display = "none";
                $("fs14").style.display = "";
                $("fs16").style.display = "none";
            }
            if (size == 24) {
                $("contentText").style.fontSize = size + "px";
                $("fs12").style.display = "none";
                $("fs14").style.display = "none";
                $("fs16").style.display = "";
            }
        }</script>

</head>
<body>
    <input type="button" name=”Submit” onclick="javascript:history.back(-1);" class="btn btn-success fanhui" value="返回">
    <div class="news_quan">
        <h1>@newss.NewsTitle</h1>
        <div class="bianji">责任编辑：@newss.Editor.EditorName</div>
        <div class="news_zhong">
            <div class="new_time"> @newss.NewsTime </div>
            <div class="new_ziti">
                <DIV class=fontSize id=fs12 style="DISPLAY: none">
                    <A href="javascript:doZoom(24)">大</A> <A href="javascript:doZoom(18)">中</A> <SPAN>小</SPAN>
                </DIV>
                <DIV class=fontSize id=fs14>
                    <A href="javascript:doZoom(24)">大</A> <SPAN>中</SPAN> <A href="javascript:doZoom(12)">小</A>
                </DIV>
                <DIV class=fontSize id=fs16 style="DISPLAY: none">
                    <SPAN>大</SPAN> <A href="javascript:doZoom(18)">中</A> <A href="javascript:doZoom(12)">小</A>
                </DIV>
            </div>
        </div>
        <div class="new_yuan">来源：视野新闻网</div>
        <br /><br />

        <DIV id=contentText>

            @newss.NewsContent

        </DIV>
        <div class="dibu">
            <div>
                点击数：@newss.NewsClick
            </div>
            @if (ViewBag.comments == null)
            {
                <div>
                    评论数：0
                </div>
            }
            else
            {
                <div>
                    评论数：@ViewBag.comments
                </div>
            }

        </div>
    </div>
</body>
</html>
