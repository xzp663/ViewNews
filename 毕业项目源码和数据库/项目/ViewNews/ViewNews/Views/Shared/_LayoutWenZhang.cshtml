    <style>
        .remennews {
            margin-left: 60px;
        }

        .writer_tu_image_writertu {
            background-color: white;
            width: 250px;
            height: 160px;
            overflow: hidden;
            text-align: center;
        }

            .writer_tu_image_writertu img {
                height: 240px;
                margin: 0 auto;
            }
        #yonghu {
            text-decoration: none;
        }

        #yonghutu img {
            border: 1px solid darkgrey;
        }

        #yonghutu:hover {
            color: firebrick;
        }

        .writer_tu_user {
            background-color: white;
            width: 26px;
            height: 26px;
            overflow: hidden;
            float: left;
            text-align: center;
        }

            .writer_tu_user img {
                width: 26px;
                margin: 0 auto;
            }

        #outLogin a {
