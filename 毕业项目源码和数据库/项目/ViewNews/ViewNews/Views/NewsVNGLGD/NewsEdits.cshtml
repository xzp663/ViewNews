
@{
    ViewBag.Title = "NewsEdits";
    Layout = "~/Views/Shared/_LayoutVNGL.cshtml";
    <style>
        .news {
            margin: 1em;
        }

        .juli {
            margin-top: 2em;
            margin-left: 2em;
        }

        label {
            font-size: 20px;
        }

        #NewsTitle {
            width: 800px;
        }
    </style>
    <script src="~/HelpSSS/百度富文本/utf8-asp/ueditor.config.js"></script>
    <script src="~/HelpSSS/百度富文本/utf8-asp/ueditor.all.min.js"></script>
}
@using ViewNews.Models
@{
    News newss = ViewBag.news;
}

<div class="crumb-wrap">
    <div class="crumb-list"><i class="icon-font"></i><a href="/LoginVNGLGD/Index">首页</a><span class="crumb-step">&gt;</span><a class="crumb-name" href="/NewsVNGLGD/Index">新闻列表</a><span class="crumb-step">&gt;</span><a class="crumb-name" href="">新闻修改</a></div>
</div>
<div class="result-wrap">
    <div class="result-content">

        <div class="juli">
            <form action="/NewsVNGLGD/NewsEdits" method="post" enctype="multipart/form-data">

                <table class="insert-tab" width="100%">
                    <tbody>
                        <tr>
                            <th width="120"><i class="require-red">*</i>新闻标题：</th>
                            <td>
                                <input type="text" class="form-control" name="NewsTitle" id="NewsTitle" value="@newss.NewsTitle">
                            </td>
                        </tr>
                        <tr>
                            <th><i class="require-red">*</i>新闻封面图片：</th>
                            <td>
                                <img src="~/Content/NewsImage/@newss.NewsImage" width="100" />
                                <input type="hidden" name="NewsImage" id="NewsImage" value="@newss.NewsImage">
                                <input type="file" name="ENewsImage" id="ENewsImage">
                            </td>
                        </tr>
                        <tr>
                            <th>新闻内容：</th>
                            <td><textarea class="form-control" name="NewsContent" id="NewsContent">@newss.NewsContent</textarea></td>
                        </tr>

                        <tr>
                            <th>
                                <input type="hidden" name="NewsID" id="NewsID" value="@newss.NewsID">
                                <input type="hidden" name="NewsTime" id="NewsTime">
                                <input type="hidden" name="NewsClick" id="NewsClick" value="@newss.NewsClick">
                                <input type="hidden" name="EditorID" id="EditorID" value="@newss.EditorID">
                            </th>
                            <td>
                                <input type="submit" class="btn btn-info" value="修改">
                            </td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</div>
<script type="text/javascript">
    var ue = UE.getEditor('NewsContent');
</script>

