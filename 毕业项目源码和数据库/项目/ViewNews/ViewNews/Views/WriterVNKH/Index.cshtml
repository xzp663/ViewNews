
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutVNKH.cshtml";
    @Styles.Render("~/Content/css")
    <style type="text/css">
        .daxiao {
            width: 1090px;
        }

        .row a {
            text-decoration: none;
        }

        .thumbnail:hover {
            box-shadow: 0px 0px 10px #888888;
        }

        .write {
            margin: 5px;
            margin-bottom: 30px;
        }

        .writer_tu_image {
            background-color: white;
            width: 240px;
            height: 150px;
            overflow: hidden;
            float: left;
            text-align: center;
        }

            .writer_tu_image img {
                height: 150px;
                margin: 0 auto;
            }

        .writer_tu_write {
            background-color: white;
            width: 40px;
            height: 50px;
            overflow: hidden;
            float: left;
            text-align: center;
        }

            .writer_tu_write img {
                height: 50px;
                margin: 0 auto;
            }

        .writer_tu_man {
            margin-left: 50px;
            font-size: 12px;
        }

        .writer_tu_manname {
            color: black;
        }

        .writer_tu_manPPP {
            margin-top: 10px;
            color: slategrey
        }
    </style>
}
@using ViewNews.Models
@{
    List<WriterCommun> writerss = ViewBag.writers;
}
<div class="sub-search-box clearfix">
    <form action="/WriterVNKH/Index" class="search-form" method="post">
        <input type="text" placeholder="请输入搜索的标题" name="Title" id="Title" class="search-text" value="@ViewBag.name" />
        <input type="submit" value="" name="submit" class="search-submit" />
    </form>
</div>
<div class="daxiao">
    <h2>专家评议</h2>
    <div class="row">
        @foreach (var item in writerss)
        {
            <div class="col-sm-6 col-md-3">
                <div class="thumbnail">
                    <div class="write">
                        <a href="/WriterVNKH/WriterMen/?WriterID=@item.WriterID">
                            <div class="writer_tu_write">
                                <img src="~/Content/WriterImage/Men/@item.Writer.WriterImage" />
                            </div>
                        </a>
                        <div class="writer_tu_man">
                            <a href="/WriterVNKH/WriterMen/?WriterID=@item.WriterID">
                                <div class="writer_tu_manname">@item.Writer.WriterName</div>
                            </a>
                            <div class="writer_tu_manPPP">@item.Writer.WriterPosition</div>
                        </div>
                    </div>
                    <a href="/WriterVNKH/WriterWenZhang/?WriterCoID=@item.WriterCommunID">
                        <div class="writer_tu_image">
                            <img src="~/Content/WriterImage/Commun/@item.WCImage" />
                        </div>
                        <div class="caption">
                            <h3>@item.WCTitle</h3>
                            <p><div>点击数:@item.WCClick</div><div>评论数:@item.WriterCommunComment.Count()</div></p>
                            <p><div>时间:@item.WCTime</div></p>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>

