
@{
    Layout = null;
}
@using ViewNews.Models
@{
    List<WriterCommun> wrc = ViewBag.writer;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>评议列表</title>
    <style>
        .news {
            margin-top: 1em;
            margin-left: 2em;
            width: 95%;
        }

        .juli {
            margin: 1em;
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <div>
        <div class="news">
            <h2>评议列表</h2>
            <div class="juli">
                <table class="table table-hover">
                    <tr>
                        <th>作家文章标题</th>
                        <th>作家文章封面图片</th>
                        <th>发表时间</th>
                        <th>点击数</th>
                        <th>作家</th>
                        <th>责任编辑</th>
                        <th>操作</th>
                    </tr>
                    @foreach (var item in wrc)
                    {
                <tr class="warning">
                    <td>@item.WCTitle</td>
                    <td>
                        <img src="~/Content/WriterImage/Commun/@item.WCImage" width="50" />
                    </td>
                    <td>@item.WCTime</td>
                    <td>@item.WCClick</td>
                    <td>@item.Writer.WriterName</td>
                    <td>@item.Editor.EditorName</td>
                    <td>
                        <a href="/WriterVNGL/WriterXiangXi/?WriterID=@item.WriterCommunID" class="btn btn-success">详情</a>
                        <a href="/WriterVNGL/WriterEdits/?WriterID=@item.WriterCommunID" class="btn btn-primary">修改</a>
                        <a href="/WriterVNGL/WriterDel?WriterID=@item.WriterCommunID" onclick="return confirm('确定删除 @item.WCTitle  吗')" class="btn btn-warning">删除</a>
                    </td>
                </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</body>
</html>
