        }

        .new_ziti {
            margin-left: 100px;
            float: left;
        }

        .new_yuan {
            margin-left: 100px;
            float: left;
        }

        .dibu {
            text-align: right;
            margin-right: 1em;
        }

        .writer_tu {
            overflow: hidden;
            margin: 1em;
        }

        .writer_tu_image {
