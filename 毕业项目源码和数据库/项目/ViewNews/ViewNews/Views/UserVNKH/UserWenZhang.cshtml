            width: 50px;
            height: 50px;
            overflow: hidden;
            float: left;
        }

            .writer_tu_image img {
                height: 50px;
                margin: 0 calc(50% - 25px);
                border: 1px solid darkgray;
            }

        .writer_tu_man {
            margin-left: 55px;
            font-size: 12px;
        }

        .writer_tu_manname {
            color: black;
        }

        .writer_tu_manPPP {
            margin-top: 10px;
            color: slategrey
        }



        #xian {
            border-top: 1px dashed darkgray;
        }

        #Textar {
            margin-left: 80px;
            margin-bottom: 10px;
        }

        #Textar_2 {
            margin-left: 60px;
            margin-bottom: 10px;
        }

        #Textar_3 {
            margin: 10px;
        }

        .touxiang {
            margin-left: 20px;
        }

        .pinglun {
            width: 80px;
            height: 30px;
            float: left;
            margin-right: 1em;
        }

        .weizhi {
            margin-left: 300px;
            overflow: hidden;
        }

            .weizhi a {
                text-decoration: none;
            }

        .qianming {
            width: 800px;
            height: 20px;
            color: lightsteelblue;
        }

