            border-radius: 10px;
            border: 1px solid black;
            overflow: hidden;
            width: 700px;
            height: auto;
        }

        .neiqian_pinglun {
            width: 80px;
            height: 30px;
            float: left;
            margin-right: 1em;
        }

        .pinglun_time {
            width: 160px;
            float: left;
            color: darkgrey;
            margin-right: 1em;
        }

        .neiqian_fu {
            overflow: hidden;
        }

        .dong {
            margin-left: 21em;
        }
    </style>
    <script type=text/javascript>
        function $(xixi) {
            return document.getElementById(xixi);
        }
        //转换字号
        function doZoom(size) {
            if (size == 12) {
                $("contentText").style.fontSize = size + "px";
                $("fs12").style.display = "";
                $("fs14").style.display = "none";
                $("fs16").style.display = "none";
            }
            if (size == 18) {
                $("contentText").style.fontSize = size + "px";
                $("fs12").style.display = "none";
                $("fs14").style.display = "";
                $("fs16").style.display = "none";
            }
            if (size == 24) {
                $("contentText").style.fontSize = size + "px";
                $("fs12").style.display = "none";
                $("fs14").style.display = "none";
                $("fs16").style.display = "";
            }
        }
    </script>
}
@using ViewNews.Models
@{
    EssayCommun EComm = ViewBag.EssComms;
