
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutVNKH.cshtml";
    @Styles.Render("~/Content/css")
    <style type="text/css">
        .daxiao {
            width: 1090px;
        }

        .row a {
            text-decoration: none;
        }

        .thumbnail:hover {
            box-shadow: 0px 0px 10px #888888;
        }

        .writer_tu_image {
            background-color: white;
            width: 240px;
            height: 180px;
            overflow: hidden;
            float: left;
            text-align: center;
        }

            .writer_tu_image img {
                height: 180px;
                margin: 0 auto;
            }
    </style>
}
@using ViewNews.Models
@{ 
    List<News> news = ViewBag.newss;
}
<div class="sub-search-box clearfix">
    <form action="/NewsVNKH/Index" class="search-form" method="post">
        <input type="text" placeholder="请输入搜索的标题" name="Title" id="Title" class="search-text" value="@ViewBag.name" />
        <input type="submit" value="" name="submit" class="search-submit" />
    </form>
</div>
<div class="daxiao">
    <h2>时事新闻</h2>
    <div class="row">
        @foreach (var item in news)
        {
        <div class="col-sm-6 col-md-3">
            <a href="/NewsVNKH/NewsWenZhang/?Newsid=@item.NewsID" @*target="_blank"跳转创建新页面*@>
                <div class="thumbnail">
                    <div class="writer_tu_image">
                        <img src="~/Content/NewsImage/@item.NewsImage" />
                    </div>
                    <div class="caption">
                        <h3>@item.NewsTitle</h3>
                        <p><div>点击数:@item.NewsClick</div><div>评论数:@item.NewsComment.Count()</div></p>
                        <p><div>时间:@item.NewsTime</div></p>
                    </div>

                </div>
            </a>
        </div>
        }
    </div>
</div>
