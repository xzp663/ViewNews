
@{
    Layout = null;
}

<!DOCTYPE html>
@using ViewNews.Models
@{
    List<Editor> edit = ViewBag.Edits;
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>责任编辑表列表</title>
    <style>
        .news {
            margin-top: 1em;
            margin-left: 2em;
            width: 95%;
        }

        .juli {
            margin: 1em;
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <div>
        <div class="news">
            <h2>责任编辑表列表</h2>
            <div class="juli">
                <table class="table table-hover">
                    <tr>
                        <th>责任编辑账号</th>
                        <th>责任编辑密码</th>
                        <th>责任编辑名字</th>
                        <th>操作</th>
                    </tr>
                    @foreach (var item in edit)
                    {
                <tr class="active">
                    <td>@item.EditorAccount</td>
                    <td>@item.EditorPwd</td>
                    <td>@item.EditorName</td>
                    <td>
                        <a href="/EditorVNGL/EditorEdits/?EditorID=@item.EditorID" class="btn btn-primary">修改</a>
                        <a href="/EditorVNGL/EditorLook/?EditorID=@item.EditorID" class="btn btn-primary">查看记录</a>
                    </td>
                </tr>
                    }
                    
                </table>
            </div>
        </div>
    </div>
</body>
</html>
