
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>视野新闻网用户登录注册</title>
    <link href="~/HelpSSS/用户登录注册可切换/css/style.css" rel="stylesheet" />
    <script src="~/HelpSSS/用户登录注册可切换/js/jquery-1.11.1.min.js"></script>
</head>
<body>
    <div class="main">
        <h1>视野新闻网用户登录</h1>
        <div class="w3_login">
            <div class="w3_login_module">
                <div class="module form-module">
                    <div class="toggle">
                        <i class="fa fa-times fa-pencil"></i>
                        <div class="tooltip">点击切换</div>
                    </div>
                    <div class="form">
                        <h2>登录账号</h2>
                        <form action="#" method="post">
                            <input type="text" name="Username" placeholder="用户名" required=" " />
                            <input type="password" name="Password" placeholder="密码" required=" " />
                            <input type="submit" value="登录" />
                        </form>
                    </div>
                    <div class="form">
                        <h2>创建一个账号</h2>
                        <form action="#" method="post">
                            <input type="text" name="Username" placeholder="用户名" required=" " />
                            <input type="password" name="Password" placeholder="密码" required=" " />
                            <input type="submit" value="注册" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
$('.toggle').click(function(){
	$(this).children('i').toggleClass('fa-pencil');
	$('.form').animate({height: "toggle",'padding-top': 'toggle','padding-bottom': 'toggle',opacity: "toggle"}, "slow");
});
    </script>
</body>
</html>
