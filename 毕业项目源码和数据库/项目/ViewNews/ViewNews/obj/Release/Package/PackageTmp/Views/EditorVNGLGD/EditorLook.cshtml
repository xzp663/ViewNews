
@{
    ViewBag.Title = "EditorLook";
    Layout = "~/Views/Shared/_LayoutVNGL.cshtml";
}
@using ViewNews.Models
@{
    Editor editor = ViewBag.eidtss;
    List<News> news = ViewBag.news;
    List<WriterCommun> writer = ViewBag.writer;
}
<div class="crumb-wrap">
    <div class="crumb-list"><i class="icon-font"></i><a href="~/LoginVNGLGD/Index">首页</a><span class="crumb-step">&gt;</span><a class="crumb-name" href="~/EditorVNGLGD/Index">责任编辑列表</a><span class="crumb-step">&gt;</span><a class="crumb-name" href="">责任编辑操作记录</a></div>
</div>
<div class="result-wrap">
    <div class="result-content">
        <h2>@editor.EditorName 的操作记录</h2>
        <table class="insert-tab" width="100%">
            <tr>
                <td>时事新闻</td>
                <td>专家评议</td>
            </tr>
            <tr>

                <td>
                    @if (news.Count() == 0)
                    {
                        @: 暂无记录
                    }
                    else
                    {
                        foreach (var item in news)
                        {
                            <a href="~/NewsVNGLGD/NewsXiangXi/?NewsID=@item.NewsID">@editor.EditorName 于 @item.NewsTime 发布了 @item.NewsTitle</a>
                            <br />
                        }
                    }

                </td>
                <td>
                    @if (writer.Count() == 0)
                    {
                        @: 暂无记录
                    }
                    else
                    {
                        foreach (var item in writer)
                        {
                            <a href="~/WriterVNGLGD/WriterXiangXi/?WriterID=@item.WriterCommunID">@editor.EditorName 于 @item.WCTime 发布了 @item.WCTitle</a>
                            <br />
                        }
                    }
                </td>
            </tr>

        </table>
    </div>
</div>

