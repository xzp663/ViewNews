
@{
    ViewBag.Title = "NewsAdd";
    Layout = "~/Views/Shared/_LayoutVNGL.cshtml";
    <style>
        .news {
            margin: 1em;
        }

        .juli {
            margin-top: 2em;
            margin-left: 2em;
        }

        label {
            font-size: 20px;
        }

        #NewsTitle {
            width: 800px;
        }

        #fuwencne {
            width: 1000px;
        }

        #NewsTitle-error {
            color: red;
        }

        #NewsImage-error {
            color: red;
        }
    </style>
    <script src="~/HelpSSS/百度富文本/utf8-asp/ueditor.config.js"></script>
    <script src="~/HelpSSS/百度富文本/utf8-asp/ueditor.all.min.js"></script>

}
@using ViewNews.Models
@{
    Editor edi = Session["Editors"] as Editor;
}

<div class="crumb-wrap">
    <div class="crumb-list"><i class="icon-font"></i><a href="~/LoginVNGLGD/Index">首页</a><span class="crumb-step">&gt;</span><a class="crumb-name" href="~/NewsVNGLGD/Index">新闻列表</a><span class="crumb-step">&gt;</span><a class="crumb-name" href="">新闻添加</a></div>
</div>
<div class="result-wrap">
    <div class="result-content">

        <div class="juli">
            <form action="~/NewsVNGLGD/NewsAdd" method="post" enctype="multipart/form-data" id="form1">

                <table class="insert-tab" width="100%">
                    <tbody>
                        <tr>
                            <th width="120"><i class="require-red">*</i>新闻标题：</th>
                            <td>
                                <input type="text" class="form-control" name="NewsTitle" id="NewsTitle" placeholder="请输入不多于25个字符">
                            </td>
                        </tr>
                        <tr>
                            <th><i class="require-red">*</i>新闻封面图片：</th>
                            <td>
                                <input type="file" name="NewsImage" id="NewsImage">
                            </td>
                        </tr>
                        <tr>
                            <th>新闻内容：</th>
                            <td>
                                <div id="fuwencne">
                                    <textarea class="form-control" name="NewsContent" id="NewsContent"></textarea>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <th>
                                <input type="hidden" name="NewsTime" id="NewsTime">
                                <input type="hidden" name="NewsClick" id="NewsClick" value="0">
                                <input type="hidden" name="EditorID" id="EditorID" value="@edi.EditorID">
                            </th>
                            <td>
                                <input type="submit" class="btn btn-info" value="添加">
                            </td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    var ue = UE.getEditor('NewsContent');
</script>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/jquery.validate.js"></script>
<script type="text/javascript">
    $(function () {
        $("#form1").validate({
            rules: {
                NewsTitle: {
                    required: true,
                    maxlength: 25
                },
                NewsImage: { required: true },
                NewsContent: { required: true }
            },
            messages: {
                NewsTitle: { required: "必填", maxlength: "请输入不多于25个字符" },
                NewsImage: { required: "必填" },
                NewsContent: { required: "必填" }
            }
        })
    })
</script>
